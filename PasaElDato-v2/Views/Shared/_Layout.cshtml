<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Main.css" rel="stylesheet" />
    <link href="~/Content/fontawesome/all.min.css" rel="stylesheet" />
    @Styles.Render("~/Content/fontawesome")

</head>
<body>
    <div class="container-fluid ">

        <!-- Encabezado -->
        <header class="blog-header py-3 container ">
            <div class="row flex-nowrap justify-content-between align-items-center">
                <div class="col-sm-3 col-md-3 pt-1">
                    @Html.ActionLink("Contacto","Contact","Home", new {@class ="text-muted white-text" })
                </div>
                <div class="col-sm-6 col-md-6 text-center">
                    @Html.ActionLink("PasaElDato", "Ingresar", "Home", new { @class = "blog-header-logo btn-outline-danger white-text" })
                </div>
                <div class="col-sm-3 col-md-3 d-flex justify-content-end ">
                   @Html.ActionLink("Ingresar", "Index", "Home", new {@class= "btn btn-sm btn-outline-danger" })
                </div>
            </div>
        </header>
       
        <!-- /ENCABEZADO -->

        <!-- MENU -->
        <div class="py-1 mb-2 container">
            <nav class="nav d-flex justify-content-between">
                <div class="dropdown">
                    <a class="btn btn-danger dropdown-toggle" href="Categorias" role="button" id="Categorias" data-toggle="dropdown"
                       aria-haspopup="true" aria-expanded="false">
                        Categorias
                    </a>

                    <div class="dropdown-menu" aria-labelledby="Categorias">
                        <a class="dropdown-item" href="#">Simple</a>
                        <a class="dropdown-item" href="#">Premiun</a>
                        <a class="dropdown-item" href="#">Golden</a>
                    </div>
                </div>
                <a class="p-2 text-muted" href="#myCarousel">Nuevo</a>
                <a class="p-2 text-muted" href="#">Noticias</a>
                <a class="p-2 text-muted" href="#">Reserva</a>
            </nav>
        </div>
        <!-- /MENU -->

    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer class="text-center">
            <p>&copy; @DateTime.Now.Year @Html.ActionLink("PasaElDato.cl","Index","Home", new {@class="text-danger" })</p>
        </footer>
    </div>


    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/jquery-3.0.0.js"></script>
    <script src="~/Scripts/popper.min.js"></script>

</body>
</html>